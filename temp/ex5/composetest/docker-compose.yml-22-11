version: "3.8"
services:
  web:
    build: .
    volumes:
      - /usr/src/app
    ports:
      - "5000:5000"
    volumes:
      - .:/code
    environment:
      FLASK_ENV: development
    networks:
      - frontend
  redis:
    image: "redis:alpine"
  postgres:
    image: "postgres:9.6"
    environment:
      POSTGRES_DB: "admin"
      POSTGRES_PASSWORD: "password"
    volumes:
      - "./postgres/postgres.conf:/usr/local/etc/postgres/postgres.conf"
      - "./postgres/data:/var/lib/postgresql/data:delegated"
    command: "postgres -c config_file=/usr/local/etc/postgres/postgres.conf"
    ports:
      - "5432:5432"
    networks:
      - frontend
    depends_on:
      - web


networks:
  frontend:
    # Use a custom driver
    driver: custom-driver-1
